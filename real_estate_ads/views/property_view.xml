<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <data>

       <record id="estate_property_tree_view" model="ir.ui.view">
           <field name="name">estate.property.tree</field>
           <field name="model">estate.property</field>
           <field name="arch" type="xml">
               <tree>
                   <field name="name"/>
                   <field name="tag_ids"/>
                   <field name="type_id"/>
                   <field name="postcode"/>
                   <field name="data_availability"/>
                   <field name="expected_price"/>
                   <field name="best_offer"/>
                   <field name="selling_price"/>
                   <field name="offer_ids"/>
               </tree>
           </field>
           </record>

       <record id="estate_property_form_view" model="ir.ui.view">
           <field name="name">estate.property.form</field>
           <field name="model">estate.property</field>
           <field name="arch" type="xml">
               <form>
                   <header>
                       <button name="action_new" type="object" string="New" class="btn btn-primary"/>
                       <button name="action_old" type="object" string="Old" class="btn btn-danger"/>
                   </header>
                   <sheet>
                     <group>
                         <field name="name"/>
                         <field name="tag_ids" widget="many2many_tags"/>
                         <group>
                             <field name="state"/>
                             <field name="type_id"/>
                             <field name="postcode"/>
                             <field name="data_availability"/>
                         </group>
                         <group>
                             <field name="expected_price"/>
                             <field name="best_offer"/>
                             <field name="selling_price"/>
                         </group>
                     </group>
                       <notebook>
                             <page string="Description">
                                 <group>
                                     <field name="description"/>
                                     <field name="bedrooms"/>
                                     <field name="living_area"/>
                                     <field name="facades"/>
                                     <field name="garage"/>
                                     <field name="garden"/>
                                     <field name="garden_area"/>
                                     <field name="garden_orientation" widget="statusbar"/>
                                     <field name="total_area"/>
                                 </group>
                             </page>
                             <page string="Offers">
                                 <field name="offer_ids">
                                    <tree editable="bottom">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="status"/>
                                        <field name="creation_date"/>
                                        <field name="validity"/>
                                        <field name="deadline"/>
                                    </tree>
                                </field>
                             </page>
                           <page string="Other Info">
                               <group>
                                   <field name="sales_id"/>
                                   <field name="buyer_id"/>
                                   <field name="phone"/>
                               </group>
                           </page>
                       </notebook>
                   </sheet>
               </form>
           </field>
       </record>


       <record id="action_property" model="ir.actions.act_window">
           <field name="name">Property</field>
           <field name="res_model">estate.property</field>
           <field name="view_mode">tree,form</field>
           <field name="view_id" ref="estate_property_tree_view"/>
           <field name="help" type="html">
               <p class="o_view_nocontent_smiling_face">
                   Create a Property to Advertise
               </p>
           </field>
       </record>
   </data>
</odoo>